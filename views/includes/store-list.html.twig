{% for store in stores %}
  <div class="col l9 offset-l2">
    <div class="card blue lighten-2 z-depth-1">
      <div class="card-content white-text">
        <span class="card-title">{{ store.getName() }}</span>
        {% set brands = store.getBrands() %}
        <p>Brands:</p>
        <ul>
          {% for brand in brands %}
            <li>{{ brand.getName() }}</li>
          {% endfor %}
        </ul>
      </div>
      <div class="card-action">
          <a href="/stores/{{ store.getId( )}}/addBrandForm"><i class="material-icons">playlist_add</i> Add Brand to Store</a>
          <a class="right" href="/stores/{{ store.getId( )}}/deleteStore"><i class="material-icons">thumb_down</i> Delete This Store</a>
      </div>
    </div>
  </div>
{% endfor %}
